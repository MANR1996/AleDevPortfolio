---
import CSSIcon from "./icons/CSS.astro";
import HTMLIcon from "./icons/HTML.astro";
import MaterialUIIcon from "./icons/MaterialUI.astro";
import ReactIcon from "./icons/React.astro";
import RemixIcon from "./icons/Remix.astro";
import TailwindIcon from "./icons/Tailwind.astro";
import TypeScriptIcon from "./icons/TypeScript.astro";
import RapidApiIcon from "./icons/RapidApi.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import ProjectItem from "./ProjectItem.astro";
const TAGS = {
  HTML: {
    name: "HTML 5",
    class: "text-[#D5502B] border-[#D5502B]",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "text-[#1571AF] border-[#1571AF]",
    icon: CSSIcon,
  },
  MaterialUI: {
    name: "Material-UI",
    class: "text-[#0A7CEF] border-[#0A7CEF]",
    icon: MaterialUIIcon,
  },
  React: {
    name: "ReactJS",
    class: "text-[#0ACCEF] border-[#0ACCEF]",
    icon: ReactIcon,
  },
  Remix: {
    name: "Remix",
    class: "text-[#1A1A1A] border-[#1A1A1A]",
    icon: RemixIcon,
  },
  Tailwind: {
    name: "Tailwind CSS",
    class: "text-[#23A3B1] border-[#23A3B1]",
    icon: TailwindIcon,
  },
  TypeScript: {
    name: "TypeScript",
    class: "text-[#3575BB] border-[#3575BB]",
    icon: TypeScriptIcon,
  },
  RapidApi: {
    name: "Rapid API",
    class: "text-[#23456E] border-[#23456E]",
    icon: RapidApiIcon,
  },
  JavaScript: {
    name: "JavaScript",
    class: "text-[#E2CF51] border-[#E2CF51]",
    icon: JavaScriptIcon,
  },
};
const PROJECTS = [
  {
    title: "ShopApp - Online shop 🛍️",
    description:
      "Pagina de demostracion para una tienda online, de manera interactiva se puede eliminar productos del carrito y modificar su cantidad.",
    tags: [TAGS.React, TAGS.TypeScript, TAGS.MaterialUI, TAGS.HTML, TAGS.CSS],
    image: "/ShopProject.webp",
    github: "https://github.com/MANR1996/ShopApp",
    link: "https://react-challange-pearl.vercel.app/",
  },
  {
    title: "MovieApp - Catálogo y valoración de películas 🎭",
    description:
      "Aplicacion de busequedas de pelis para conocer en que plataforma esta disponible, valoraciones, sinopsis, actores y mucho más... Si no sabes que ver dejate llevar por sus recomendaciones.",
    tags: [
      TAGS.Remix,
      TAGS.React,
      TAGS.Tailwind,
      TAGS.TypeScript,
      TAGS.RapidApi,
      TAGS.HTML,
      TAGS.CSS,
    ],
    image: "/MovieProject.webp",
    github: "https://github.com/MANR1996/MovieApp",
    link: "https://movie-app-two-gray.vercel.app/topmovies",
  },
];
---

{PROJECTS.map((project) => <ProjectItem project={project} />)}
