---
import { t } from "i18next";
import { LanguageSelector } from "astro-i18next/components";
---

<style>
  .smaller {
    animation: smaller-animation linear both;
    animation-timeline: scroll(root block);
    animation-range: 0 200px;
  }
  @keyframes smaller-animation {
    0% {
      height: 96px;
      padding: 1.5rem 0.5rem;
    }
    100% {
      height: 49px;
      padding: 1rem 0.5rem 0.5rem;
      box-shadow: rgba(0, 0, 0, 0.04) 0px 3px 5px;
    }
  }
</style>
<header
  class="flex justify-between items-center py-6 w-full xl:w-[1120px] mx-auto fixed z-10 bg-white left-[50%] translate-x-[-50%] smaller"
>
  <img
    class="rounded-full size-12 border-2 border-black"
    src="/logo.svg"
    alt="aleDev-logo"
  />
  <nav>
    <ul class="flex flex-row gap-x-10 opacity-80 text-nowrap">
      <li class="hover:scale-125 transition">
        <a href="#start">{t("menu.home")}</a>
      </li>
      <li class="hover:scale-125 transition">
        <a href="#about">{t("menu.about")}</a>
      </li>
      <li class="hover:scale-125 transition">
        <a href="#experience">{t("menu.experience")}</a>
      </li>
      <li class="hover:scale-125 transition">
        <a href="#projects">{t("menu.projects")}</a>
      </li>
      <li class="hover:scale-125 transition">
        <a href="#contact">{t("menu.contact")}</a>
      </li>
      <li><LanguageSelector showFlag={true} class="my-select-class" /></li>
    </ul>
  </nav>
</header>
