---
import LinkIcon from "./icons/Link.astro";
import GitHubBtn from "./GitHubBtn.astro";
const { title, description, tags, image, github, link } = Astro.props.project;
---

<style>
  article {
    opacity: 0;
    animation: project-fadein linear both;
    animation-timeline: view();
    animation-range: entry 10% cover 20%;
  }
  @keyframes project-fadein {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY();
    }
  }
  .image::before {
    position: absolute;
    content: attr(data-label);
    font-size: 44px;
    top: 0;
    left: 0;
    z-index: 1;
    border-radius: 0.25rem;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    color: white;
    background: rgba(0, 0, 0, 0.6);
    opacity: 0;
    transition: 0.4s;
  }
  .image-link:hover .image {
    transform: scale(1.05);
  }
  .image-link:hover .image::before {
    opacity: 1;
  }
  .images img {
    height: 250px;
    transform: translateY(102%);
  }
</style>
<article class="mb-20">
  <div class="flex gap-y-2 lg:flex-row flex-col lg:place-content-between mb-2">
    <a href={link} target="_blank" class="flex items-center">
      <h3
        class="text-2xl flex gap-x-2 items-center font-semibold text-blue-600/80 opacity-70"
      >
        <!-- <LinkIcon/> -->
        {title}
      </h3>
    </a>
    <GitHubBtn href={github} />
  </div>
  <p class="text-lg mb-4 text-pretty">{description}</p>
  <ul class="flex gap-x-2 gap-y-2 flex-row flex-wrap mb-4">
    {
      tags.map((tag: { name: string; class: string; icon: Function }) => (
        <li>
          <span
            class={`items-center bg-white flex gap-x-1 rounded-full text-sm py-1 px-2 border-2 ${tag.class}`}
          >
            <tag.icon class="size-4" />
            {tag.name}
          </span>
        </li>
      ))
    }
  </ul>
  <a
    href={link}
    class="image-link"
    target="_blank"
    aria-label={`Visit the ${title} website - Opens in a new tab`}
  >
    <div class="image relative duration-[600ms] rounded" data-label="Â»">
      <img
        class="rounded shadow-2xl shadow-black/50"
        src={image}
        alt={`Screenshot project ${title}`}
      />
    </div>
  </a>
</article>
